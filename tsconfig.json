{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/main/**/*.ts",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}